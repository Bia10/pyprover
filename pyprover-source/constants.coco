imp_sym = first_encodeable("\u2192", "->")
and_sym = first_encodeable("\u2227", "/\\")
or_sym = first_encodeable("\u2228", "\\/")
forall_sym = first_encodeable("\u2200", "A:")
exists_sym = first_encodeable("\u2203", "E:")
