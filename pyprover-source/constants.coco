# Imports:

import sys

# Utilities:

def first_encodeable(*symbols):
    for sym in symbols:
        try:
            sym.encode(sys.stdout.encoding)
        except UnicodeEncodeError:
            pass
        else:
            return sym
    raise ValueError("No encodeable symbol in " + repr(symbols))

